<!-- Navbar -->
{{> navbar}}

<div class="ui body-content">
    <h4 class="ui center aligned icon header">
        <i class="circular sitemap alternate outline icon"></i>
        MAPPING
    </h4>
    <div class="ui internally celled grid">
        <div class="eight wide column">
            <h5>Choose some individual mappings to create an mapping:</h5>
            <div class="ui middle aligned divided list" id="individuals-to-mapping-list">
                {{#each this.indMappings}}
                    <div class="ui checkbox">
                        <input name="{{_id}}" type="checkbox">
                        <label><b>{{tag}}</b>: {{owlClassIRI}}</label>
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="eight wide column">
            <div>
                <label><b>Choose an output file name:</b></label>
            </div>
            <div class="ui input fluid">
                <input placeholder="Output file name" type="text" id="mapping-name">
            </div>
            <div id="create-mapping-btn">
                <button class="ui big basic secondary compact button" onclick="createMapping('{{_id}}')">
                    Create
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
{{> footer}}