<!-- Navbar -->
{{> navbar}}
<div class="ui body-content" id="mapper-content">
    <div class="ui internally celled three column grid" id="mapper-grid">
        <div id="data-file-content" class="five column">
            <div id="data-file-data">
                <div id="data-file-tree">
                    <button class="ui circular compact icon basic button" onclick="getDataFileTree('{{this.dataFileIds}}');">
                        <i class="angle double down icon"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="five column">
            <div id="data-file-term" style="display: none">individual-name-to-term</div>
            <div id="mapper-segment">
                <h5 class="ui center aligned icon header">
                    <i class="circular file alternate outline icon"></i>
                    INDIVIDUAL MAPPING
                </h5>
                <hr>
                <button class="ui button fluid basic secondary" onclick="createIndMapping();">
                    Create
                </button>
                <hr>
                <h5 class="ui center aligned header">
                    <button class="ui icon circular button basic secondary" onclick="addIndividualName();">
                        <i class="icon plus"></i>
                    </button>
                    INDIVIDUAL NAME
                </h5>
                <div class="individual-name-to">
                    <div id="individual-name-to-term">
                    </div>
                </div>
                <hr>
                <div class="classes-to">
                    <div id="classes-to-term">
                    </div>
                </div>
                <div class="ui fluid search selection dropdown classes-menu">
                    <input name="select-class" type="hidden">
                    <i class="dropdown icon"></i>
                    <div class="default text">Select class</div>
                    <div class="menu" id="classes-menu">
                        {{#each this.classes}}
                            <div class="item" data-value="{{IRI}}" id="{{ontologyId}}">
                                {{IRI}}
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="six column">
            <div class="ui buttons black fluid">
                <button class="ui button" onclick="">Individual mappings</button>
            </div>
        </div>
    </div>
</div>
<!-- Footer -->
{{> footer}}