<!-- Navbar -->
{{> navbar}}
<div class="ui body-content" id="mapper-content">
    <div class="ui celled internally grid" id="mapper-grid">
        <div class="row">
            <div class="three wide column">
                <h5 class="ui center aligned header">
                    <i class="circular sitemap alternate outline icon"></i>
                    INDIVIDUAL
                </h5>
            </div>
            <div class="ten wide column">
               <div>
                   IRI: {{owlClassIRI}}
               </div>
            </div>
            <div class="three wide column">
                <button class="ui fluid button basic secondary">
                    SAVE
                </button>
            </div>
        </div>
        <div class="row">
            <div class="sixteen wide column">
                <div class="ui internally celled grid" id="individual-content" >
                    <div class="eight wide column">
                        <div class="ui buttons black ten wide fields">
                            <button class="ui button" onclick="changeIndContent('{{_id}}', 'dproperty');">data properties</button>
                            <button class="ui button" onclick="changeIndContent('{{_id}}', 'oproperty');">object properties</button>
                        </div>
                        <div id="individual-mapping-content">
                        </div>
                    </div>
                    <div class="eight wide column">
                        <h5 class="ui center aligned header">
                            Properties that you mapped
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer -->
{{> footer}}

